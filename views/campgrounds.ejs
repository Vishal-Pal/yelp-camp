<% include partials/header %>
    <div class="container">
    <div class="alert-success">
            <%= success %>
    </div></div>
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p><a class="btn btn-primary btn-large" href="/campgrounds/new">Add A New Campground</a></p>
        </div>
    </header>
    <div class="row text-center" >
        
<% campgrounds.forEach(function(campground) { %>
    <div class="col-md-3 col-sm-6">
            <img src="<%= campground.image %>" class="img-thumbnail">
            <div class="caption">
                <h4><%= campground.name %></h4>
            </div>
            <a href="/campgrounds/<%= campground._id %>"><button class="btn btn-sm btn-primary">More Info</button></a>
    </div>
<%    }); %>
    </div>
<% include partials/footer %>

